<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>AtlasWorld.Client</PackageId>
    <Version>1.0.0</Version>
    <Authors>Atlas World Team</Authors>
    <Company>Atlas World Team</Company>
    <Description>C# client for Atlas World multiplayer game server</Description>
    <PackageProjectUrl>https://github.com/atlasworld/client-csharp</PackageProjectUrl>
    <PackageLicenseUrl>https://opensource.org/licenses/MIT</PackageLicenseUrl>
    <PackageTags>game, multiplayer, websocket, colyseus</PackageTags>
    <RepositoryUrl>https://github.com/atlasworld/client-csharp</RepositoryUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.Net.WebSockets.Client" Version="4.3.2" />
  </ItemGroup>

</Project>
