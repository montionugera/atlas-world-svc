{
  "name": "atlas-world-colyseus-server",
  "version": "1.0.0",
  "description": "Atlas World Game Server using Colyseus",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "dev:watch": "nodemon --exec ts-node src/index.ts --watch src --ext ts,js",
    "test": "jest",
    "test:watch": "jest --watch",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "prepare": "husky install",
    "docs:generate": "echo 'HTML docs generated manually - see ./docs/index.html'",
    "docs:serve": "npx serve ./docs -p 3000",
    "client:csharp": "echo 'C# client generated manually - see ./generated/csharp/'",
    "client:typescript": "npx @asyncapi/generator typescript asyncapi.yaml ./generated/typescript",
    "client:all": "npm run client:csharp && npm run client:typescript"
  },
  "dependencies": {
    "@colyseus/schema": "^3.0.0",
    "@types/matter-js": "^0.20.2",
    "colyseus": "^0.16.4",
    "colyseus.js": "^0.16.19",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "planck": "^1.4.2"
  },
  "devDependencies": {
    "@asyncapi/generator": "^1.9.0",
    "@asyncapi/html-template": "^1.0.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.2.4",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "colyseus",
    "multiplayer",
    "game",
    "websocket",
    "realtime"
  ],
  "author": "Atlas World Team",
  "license": "MIT",
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  }
}
