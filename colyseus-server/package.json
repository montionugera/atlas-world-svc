{
  "name": "atlas-world-colyseus-server",
  "version": "1.0.0",
  "description": "Atlas World Game Server using Colyseus",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "docs:generate": "echo 'HTML docs generated manually - see ./docs/index.html'",
    "docs:serve": "npx serve ./docs -p 3000",
    "client:csharp": "echo 'C# client generated manually - see ./generated/csharp/'",
    "client:typescript": "npx @asyncapi/generator typescript asyncapi.yaml ./generated/typescript",
    "client:all": "npm run client:csharp && npm run client:typescript"
  },
  "dependencies": {
    "colyseus": "^0.16.4",
    "@colyseus/schema": "^3.0.0",
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "ts-node": "^10.9.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "@asyncapi/generator": "^1.9.0",
    "@asyncapi/html-template": "^1.0.0"
  },
  "keywords": ["colyseus", "multiplayer", "game", "websocket", "realtime"],
  "author": "Atlas World Team",
  "license": "MIT"
}
